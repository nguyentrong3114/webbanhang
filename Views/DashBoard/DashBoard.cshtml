@{
    ViewData["Title"] = "DashBoard";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/DashBoard.css" asp-append-version="true" />
    <link rel="stylesheet" href="dashboard.css">
</head>

<body>
    <div class="dashboard-container">
        <div class="dashboard-navbar">
            <div class="title">
                <h2>CLOTHING</h2>
            </div>
            <div class="menu-parent">
                <div class="menu-title">
                    <h3>MENU</h3>
                </div>
                <div class="list-menu">
                    <div class="btn active">
                        <i class="fa-solid fa-grip"></i>
                        <p>Overview</p>
                    </div>
                    <div class="btn">
                        <i class="fa-solid fa-suitcase"></i>
                        <p>Product</p>
                    </div>
                    <div class="btn">
                        <i class="fa-solid fa-people-group"></i>
                        <p>Customer</p>
                    </div>
                    <div class="btn">
                        <i class="fa-solid fa-file"></i>
                        <p>Transaction</p>
                    </div>
                    <div class="btn">
                        <i class="fa-solid fa-chart-simple"></i>
                        <p>Statistics</p>
                    </div>
                    <div class="btn">
                        <i class="fa-solid fa-clock"></i>
                        <p>Log Activity</p>
                    </div>
                </div>
            </div>
            <hr>
            <div class="menu-parent">
                <div class="menu-title">
                    <h3>SUPPORT</h3>
                </div>
                <div class="list-menu">
                    <div class="btn">
                        <i class="fa-solid fa-gear"></i>
                        <p>Setting</p>
                    </div>
                    <div class="btn">
                        <i class="fa-solid fa-circle-question"></i>
                        <p>Help</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="dashboard-main">
            <div class="header-dashboard-main">
                <div class="title">
                    <h2>Dashboard</h2>
                </div>
                <div class="component-user-search">
                    <div class="input-place">
                        <input type="text" class="search" placeholder="Tìm Kiếm">
                        <i class="fa-solid fa-magnifying-glass search-icon"></i>
                    </div>
                    <div class="noti">
                        <i class="fa-solid fa-bell fa-lg"></i>
                        <div class="badge">3</div>
                    </div>
                    <div class="user">
                        <i class="fa-solid fa-user fa-lg"></i>
                    </div>
                </div>
            </div>
            <hr>
            <div class="nav-dashboard-main">
                <div class="top-choose-time">
                    <div class="list-choose-time">
                        <div class="choose-time active">
                            <p>Last 24 hour</p>
                        </div>
                        <div class="choose-time">
                            <p>Last weeks</p>
                        </div>
                        <div class="choose-time">
                            <p>Last month</p>
                        </div>
                        <div class="choose-time">
                            <p>Last year</p>
                        </div>
                    </div>
                    <div class="combobox-list-choose">
                        <input type="input" class="combobox-input" placeholder="Select ">
                        <div class="combobox-list">
                            <div>Option 1</div>
                            <div>Option 2</div>
                            <div>Option 3</div>
                            <div>Option 4</div>
                        </div>
                    </div>
                </div>
                <div class="body-static">
                    <div class="list-static">
                        <div class="static">
                            <div class="title-static">
                                <i class="fa-solid fa-coins"></i>
                                <h3>Total Income</h3>
                            </div>
                            <div class="data-static">
                                <p>$700.000</p>
                                <div class="compare-static">
                                    <div class="persent loss">
                                        <i class="fa-solid fa-arrow-trend-down"></i>
                                        <p>15%</p>
                                    </div>
                                    <p>vs last 7 days</p>
                                </div>
                            </div>
                        </div>
                        <div class="static">
                            <div class="title-static">
                                <i class="fa-solid fa-people-group"></i>
                                <h3>Customer</h3>
                            </div>
                            <div class="data-static">
                                <p>70.000</p>
                                <div class="compare-static">
                                    <div class="persent profit">
                                        <i class="fa-solid fa-arrow-trend-up"></i>
                                        <p>15%</p>
                                    </div>
                                    <p>vs last 7 days</p>
                                </div>
                            </div>
                        </div>
                        <div class="static">
                            <div class="title-static">
                                <i class="fa-solid fa-people-group"></i>
                                <h3>Transaction</h3>
                            </div>
                            <div class="data-static">
                                <p>7000</p>
                                <div class="compare-static">
                                    <div class="persent profit">
                                        <i class="fa-solid fa-arrow-trend-up"></i>
                                        <p>15%</p>
                                    </div>
                                    <p>vs last 7 days</p>
                                </div>
                            </div>
                        </div>
                        <div class="static">
                            <div class="title-static">
                                <i class="fa-solid fa-suitcase"></i>
                                <h3>Total Product</h3>
                            </div>
                            <div class="data-static">
                                <p>45.000</p>
                                <div class="compare-static">
                                    <div class="persent loss">
                                        <i class="fa-solid fa-arrow-trend-down"></i>
                                        <p>15%</p>
                                    </div>
                                    <p>vs last 7 days</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
<script>
    const comboboxInput = document.querySelector('.combobox-input');
    const comboboxList = document.querySelector('.combobox-list');
    const options = document.querySelectorAll('.combobox-list div');

    comboboxInput.addEventListener('focus', () => {
        comboboxList.classList.add('active');
    });

    document.addEventListener('click', (event) => {
        if (!event.target.closest('.combobox-list-choose')) {
            comboboxList.classList.remove('active');
        }
    });

    options.forEach(option => {
        option.addEventListener('click', () => {
            comboboxInput.value = option.textContent;
            comboboxList.classList.remove('active');
        });
    });
</script>

</html>